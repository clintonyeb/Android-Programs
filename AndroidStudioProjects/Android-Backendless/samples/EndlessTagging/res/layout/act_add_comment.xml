<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_gravity="center"
        android:background="@drawable/filter_back">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp" android:id="@+id/relativeLayout"
            android:background="@drawable/logo">
        <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_btn"
                android:id="@+id/addCommentBtn"
                android:layout_alignParentRight="true" android:layout_alignTop="@+id/textAddComment"
                android:layout_marginRight="5dp" android:layout_marginBottom="5dp" android:text="Post"
                android:textColor="#ffffff" android:textSize="16dp"
                android:textStyle="normal"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:id="@+id/textAddComment" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
                android:layout_marginTop="7dp" android:gravity="center" android:textColor="#ffffff"
                android:textSize="16dp" android:textStyle="normal"/>
    </RelativeLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Enter point name"
            android:id="@+id/textPointName"
            android:textSize="14.5dp" android:layout_alignLeft="@+id/relativeLayout"
            android:layout_below="@+id/relativeLayout" android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
            android:textColor="#000000" android:textStyle="normal"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imagePhotoNew"
            android:layout_alignRight="@+id/relativeLayout" android:layout_below="@+id/editNewPointName"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editNewPointName"
            android:layout_alignLeft="@+id/relativeLayout" android:layout_below="@+id/textPointName"
            android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
</RelativeLayout>