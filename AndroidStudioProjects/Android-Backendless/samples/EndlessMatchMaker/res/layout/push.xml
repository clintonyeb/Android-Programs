<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" style="@style/MainLayouStyle" android:gravity="center_vertical">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center"
            android:background="@drawable/background_push_dialog" android:padding="@dimen/defaultPadding">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_marginBottom="@dimen/defaultPadding">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/avatarImage" android:background="@drawable/background_avatar"
                    android:layout_marginRight="@dimen/defaultPadding"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pushMessage" style="@style/ProfileDetailsWhiteLabel"
                    android:layout_gravity="center_vertical|left" android:textStyle="normal" android:textSize="16dp"
                    android:typeface="normal"/>
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textfield_push_label"
                style="@style/ItalicLabels" android:layout_gravity="center_horizontal" android:textSize="14.5dp"
                android:textStyle="normal" android:typeface="normal"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/button_login"
                android:id="@+id/loginButton" style="@style/ButtonFullPinkStyle" android:textSize="16dp"
                android:textStyle="normal" android:typeface="normal"/>
    </LinearLayout>
</LinearLayout>