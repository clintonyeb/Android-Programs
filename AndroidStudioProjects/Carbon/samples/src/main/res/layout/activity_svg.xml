<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:fitsSystemWindows="true"
                            app:carbon_insetColor="?attr/colorPrimary"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

    <carbon.widget.ImageView
        app:carbon_tint="?attr/carbon_colorBackgroundInverse"
        app:carbon_src="@raw/ic_description_24px"
        android:layout_margin="@dimen/carbon_padding"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

    <carbon.widget.ImageView
        app:carbon_tint="?attr/carbon_colorBackgroundInverse"
        app:carbon_src="@raw/ic_dns_24px"
        android:layout_margin="@dimen/carbon_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <carbon.widget.ImageView
        app:carbon_tint="?attr/carbon_colorBackgroundInverse"
        app:carbon_src="@raw/ic_face_24px"
        android:layout_margin="@dimen/carbon_padding"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

    <carbon.widget.ImageView
        app:carbon_tint="?attr/carbon_colorBackgroundInverse"
        app:carbon_src="@raw/ic_print_24px"
        android:layout_margin="@dimen/carbon_padding"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

    <carbon.widget.ImageView
        app:carbon_tint="?attr/carbon_colorBackgroundInverse"
        app:carbon_src="@raw/ic_settings_input_svideo_24px"
        android:layout_margin="@dimen/carbon_padding"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

    <carbon.widget.ImageView
        app:carbon_tint="#ff00ff00"
        app:carbon_src="@raw/ic_shopping_cart_24px"
        android:layout_margin="@dimen/carbon_padding"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

    <carbon.widget.Divider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <carbon.widget.LinearLayout
        app:carbon_rippleColor="?attr/carbon_rippleColor"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <carbon.widget.ImageView
            android:duplicateParentState="true"
            android:layout_gravity="center_vertical"
            app:carbon_tint="@drawable/red_black_selector"
            app:carbon_src="@raw/ic_today_24px"
            android:layout_margin="@dimen/carbon_padding"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <carbon.widget.TextView
            android:duplicateParentState="true"
            android:layout_marginLeft="@dimen/carbon_padding"
            android:gravity="center_vertical"
            android:textColor="@drawable/red_black_selector"
            android:textAppearance="?attr/carbon_textAppearanceBody2"
            android:text="press me"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>
    </carbon.widget.LinearLayout>

    <carbon.widget.Divider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <carbon.widget.ImageView
        app:carbon_tint="#ff0000ff"
        app:carbon_src="@raw/ic_wallet_travel_24px"
        android:layout_margin="@dimen/carbon_padding"
        android:layout_width="24dp"
        android:layout_height="24dp"/>
</carbon.widget.LinearLayout>