<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="@dimen/default_margin">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_marginRight="@dimen/micro_padding"
            android:layout_marginTop="@dimen/micro_padding">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="radius (km):"
                android:textSize="@dimen/normal_text"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radiusField" android:layout_marginLeft="@dimen/micro_padding"
                android:textSize="@dimen/normal_text" android:text="0"/>
    </LinearLayout>
    <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radiusBar" android:layout_marginTop="@dimen/micro_padding" android:indeterminate="false"
            android:max="40000"
            />
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/textView" android:textSize="@dimen/normal_text" android:layout_alignParentLeft="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40 000"
                android:id="@+id/textView1" android:textSize="@dimen/normal_text"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/pointsView" android:headerDividersEnabled="true"
            android:scrollbars="vertical"/>
</LinearLayout>

