<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/MainLayouStyle">
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/title_logo" android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/defaultMargin" android:layout_marginBottom="@dimen/defaultMargin"/>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp" style="@style/LogRegFieldsStyle"
            android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
        <ImageView
                android:layout_width="@dimen/iconWidth"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_email"
                style="@style/FieldIconStyle"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FieldSeparatorStyle"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="textEmailAddress"
                android:id="@+id/emailField"
                style="@style/LogRegFieldsTextStyle"
                android:hint="@string/textfield_email_default" android:textSize="14.5dp" android:textStyle="normal"
                android:typeface="normal"/>
    </LinearLayout>
    <LinearLayout style="@style/LogRegFieldsStyle" android:layout_width="fill_parent"
                  android:layout_height="40dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
        <ImageView android:layout_width="@dimen/iconWidth" android:layout_height="wrap_content"
                   android:src="@drawable/icon_key"
                   style="@style/FieldIconStyle"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   style="@style/FieldSeparatorStyle"/>
        <EditText style="@style/LogRegFieldsTextStyle" android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:id="@+id/passwordField" android:gravity="center_vertical"
                  android:hint="@string/textfield_password_default" android:textSize="14.5dp"
                  android:textStyle="normal" android:typeface="normal" android:password="true"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/button_login"
                android:id="@+id/loginButton" style="@style/ButtonHalfedPinkStyle"
                android:layout_marginLeft="5dp" android:layout_marginTop="10dp" android:textSize="16dp"
                android:textStyle="normal" android:typeface="normal"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/button_register"
                android:id="@+id/registerButton"
                style="@style/ButtonHalfedNotPinkStyle" android:layout_marginRight="5dp"
                android:layout_marginTop="10dp" android:textSize="16dp" android:typeface="normal"
                android:textStyle="normal"/>
    </LinearLayout>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="@string/label_loginwith"
            style="@style/ItalicLabels" android:gravity="center_horizontal" android:layout_marginTop="15dp"
            android:textSize="14.5dp" android:textStyle="normal" android:typeface="normal" android:id="@+id/loginWith"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:gravity="center">
        <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Facebook"
                android:id="@+id/loginFacebookButton"
                style="@style/ButtonSocial" android:textColor="#000000" android:textSize="16dp"
                android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginTop="10dp"
                android:textStyle="normal" android:typeface="normal"/>
    </LinearLayout>
</LinearLayout>

