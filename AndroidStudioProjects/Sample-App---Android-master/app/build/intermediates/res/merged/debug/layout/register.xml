<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/title_register"
             android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:src="@drawable/title_register"
            android:layout_centerInParent="true"/>
              
		
    </RelativeLayout>
    
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent" >

          <ImageButton
              android:id="@+id/btn_register"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_centerHorizontal="true"
              android:layout_marginBottom="20dp"
              android:background="@android:color/transparent"
              android:onClick="clickHandler"
              android:src="@drawable/btn_register" />

          <ImageView
              android:id="@+id/img_picture"
              android:layout_alignParentRight="true"
              android:layout_alignParentTop="true"
              android:layout_marginRight="5dp"
              android:layout_marginTop="20dp"
              android:adjustViewBounds="true"
              android:scaleType="fitCenter"
              android:layout_height="120dp"
              android:layout_width="120dp"
              android:layout_alignTop="@+id/txt_input_userName"
              android:src="@drawable/ic_launcher" />

          <requestFocus />

          <EditText
              android:id="@+id/txt_input_userName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_marginTop="20dp"
              android:ems="9"
              android:hint="UserName" />

          <EditText
              android:id="@+id/txt_input_password"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_below="@+id/txt_input_userName"
              android:layout_marginTop="20dp"
              android:ems="9"
              android:hint="Password"
              android:inputType="textPassword" />
          
          <EditText
              android:id="@+id/txt_input_email"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_below="@+id/txt_input_password"
              android:layout_marginTop="20dp"
              android:ems="9"
              android:hint="Email"
              android:inputType="text" />

          <EditText
              android:id="@+id/txt_firstName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_below="@+id/txt_input_email"
              android:layout_marginTop="20dp"
              android:ems="9"
              android:hint="First Name"
              android:inputType="text" />

          <EditText
              android:id="@+id/txt_lastName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_below="@+id/txt_firstName"
              android:layout_marginTop="20dp"
              android:ems="9"
              android:hint="Last Name"
              android:inputType="text" />

          <EditText
              android:id="@+id/txt_phone"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_below="@+id/txt_lastName"
              android:layout_marginTop="20dp"
              android:ems="9"
              android:hint="phone number"
              android:inputType="number" />

          <ProgressBar
              android:id="@+id/progressBar"
              style="?android:attr/progressBarStyleLarge"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@+id/txt_input_password"
              android:layout_alignRight="@+id/img_picture"
              android:layout_marginBottom="19dp"
              android:layout_marginRight="19dp"
              android:adjustViewBounds="true"
              android:scaleType="fitCenter" 
              android:visibility="invisible"/>

          <ProgressBar
              android:id="@+id/progressBarBig"
              style="?android:attr/progressBarStyleLarge"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:visibility="invisible" />

      </RelativeLayout>

</LinearLayout>