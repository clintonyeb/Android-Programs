<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/egg_main" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@drawable/btnbuycoins"
        android:onClick="onClickHandler"
        android:padding="15dp"
        android:text="Stop Game"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_stop"
        android:layout_below="@+id/btn_stop"
        android:background="@drawable/btnbuycoins"
        android:onClick="onClickHandler"
        android:padding="15dp"
        android:text="pause Game"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btn_Resume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_pause"
        android:layout_below="@+id/btn_pause"
        android:background="@drawable/btnbuycoins"
        android:onClick="onClickHandler"
        android:padding="15dp"
        android:text="resume Game"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_stop"
        android:layout_centerVertical="true"
        android:background="@drawable/btnbuycoins"
        android:onClick="onClickHandler"
        android:padding="15dp"
        android:text="Start Game"
        android:textColor="#000000" />

</RelativeLayout>